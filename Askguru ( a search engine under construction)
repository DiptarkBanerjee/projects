    ];

    const container = document.getElementById("qaContainer");
    const input = document.getElementById("searchInput");
    const button = document.getElementById("searchBtn");

    function renderQuestions(filter = "") {
      container.innerHTML = "";
      const filtered = qaList.filter(qa => 
        qa.question.toLowerCase().includes(filter.toLowerCase())
      );
      if (filtered.length === 0) {
        container.innerHTML = "<p>No results found.</p>";
      } else {
        filtered.forEach(qa => {
          const div = document.createElement("div");
          div.className = "qa";
          div.innerHTML = `<h3>${qa.question}</h3><p>${qa.answer}</p>`;
          container.appendChild(div);
        });
      }
    }

    // Display all questions on homepage load
    renderQuestions();

    // Add search functionality
    input.addEventListener("input", () => renderQuestions(input.value));
    button.addEventListener("click", () => renderQuestions(input.value));
  </script>

