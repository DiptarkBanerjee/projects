<body>
  <div class="container">
    <header>
      <h1>AskGuru</h1>
      <div class="subtitle">100 Certified Google Answers</div>
    </header>

    <input type="text" id="searchBox" placeholder="Search questions...">

    <div id="qaContainer"></div>
  </div>

  <script>
    const questionsAndAnswers = [
      { question: "What is your name?", answer: "My name is AskGuru." },
      { question: "Where do you live?", answer: "I live on the internet." },
      { question: "What do you do?", answer: "I answer your questions." },
      { question: "Do you like programming?", answer: "Absolutely, it's my favorite!" },
      { question: "What is your favorite language?", answer: "JavaScript, of course." },
      // ... Add up to 100 such entries
    ];

    const container = document.getElementById('qaContainer');
    const searchBox = document.getElementById('searchBox');

    function displayQuestions(filter = "") {
      container.innerHTML = "";
      const filtered = questionsAndAnswers.filter(qa =>
        qa.question.toLowerCase().includes(filter.toLowerCase())
      );
      if (filtered.length === 0) {
        container.innerHTML = "<p>No results found.</p>";
        return;
      }
      filtered.forEach((qa, index) => {
        const qaDiv = document.createElement("div");
        qaDiv.classList.add("qa");
        qaDiv.innerHTML = `<h3>Q${index + 1}: ${qa.question}</h3><p>A: ${qa.answer}</p>`;
        container.appendChild(qaDiv);
      });
    }

    searchBox.addEventListener("input", (e) => {
      displayQuestions(e.target.value);
    });

    // Initial display
    displayQuestions();
  </script>
</body>
</html>

<script>
  // Sample: Replace or expand with full 100 questions & answers
  const questions And Answers = [
    { question: "What is the capital of France?", answer: "Paris is the capital of France." },
    { question: "How many continents are there?", answer: "There are seven continents." },
    { question: "Who is the founder of Google?", answer: "Google was founded by Larry Page and Sergey Brin." },
    { question: "What is the speed of light?", answer: "The speed of light is approximately 299,792 kilometers per second." },
    { question: "What is the largest mammal?", answer: "The blue whale is the largest mammal on Earth." },
    // ... Add up to 100 //
     ];

  const qaContainer = document.getElementById("qaContainer");
  const searchInput = document.getElementById("searchInput");

  // Function to display Q&As
  function displayQAs(filteredData) {
    qaContainer.innerHTML = ""; // Clear current list
    filteredData.forEach(item => {
      const qaElement = document.createElement("div");
      qaElement.className = "qa";
      qaElement.innerHTML = `
        <h3>${item.question}</h3>
        <p>${item.answer}</p>
      `;
     qaContainer.appendChild(qaElement);
    });
  }

  // Initial load
  displayQAs(questionsAndAnswers);

  // Add search functionality
  searchInput.addEventListener("input", function () {
    const searchTerm = this.value.toLowerCase();
    const filtered = questionsAndAnswers.filter(item =>
      item.question.toLowerCase().includes(searchTerm) || item.answer.toLowerCase().includes(searchTerm)
    );
    displayQAs(filtered);
  });
</script>

